<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="chuyen_nganh_tree_view" model="ir.ui.view">
            <field name="name">Chuyên Ngành</field>
            <field name="model">chuyen_nganh</field>
            <field name="arch" type="xml">
                <tree string="Chuyên Ngành">
                    <field name="ma_nganh"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="chuyen_nganh_form_view" model="ir.ui.view">
            <field name="name">Chuyên Ngành</field>
            <field name="model">chuyen_nganh</field>
            <field name="arch" type="xml">
                <form string="Chuyên Ngành">
                    <sheet>
                        <div class="oe_title">
                            <label for="ma_nganh"/>
                            <h1>
                                <field name="ma_nganh" placeholder="Mã chuyên ngành" required="1"/>
                            </h1>
                        </div>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Tên chuyên ngành" required="1"/>
                            </h1>
                        </div>
                        <notebook>
                            <page string="Mô tả">
                                <field name="mota"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="chuyen_nganh_search" model="ir.ui.view">
            <field name="name">Search</field>
            <field name="model">chuyen_nganh</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="ma_nganh"/>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="chuyen_nganh_view" model="ir.actions.act_window">
            <field name="name">Chuyên Ngành</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">chuyen_nganh</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- This Menu Item must have a parent and an action -->


    </data>
</odoo>