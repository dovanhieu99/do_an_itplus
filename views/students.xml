<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="students_tree_view" model="ir.ui.view">
            <field name="name">Sinh Viên</field>
            <field name="model">students</field>
            <field name="arch" type="xml">
                <tree string="Students">
                    <field name="masv"/>
                    <field name="name"/>
                    <field name="gioitinh"/>
                    <field name="chuyen_nganh_id"/>
                    <field name="khoa_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="students_tree_view_button" model="ir.ui.view">
            <field name="name">Sinh Viên</field>
            <field name="model">students</field>
            <field name="priority" eval="150"/>
            <field name="arch" type="xml">
                <tree string="Students" create="false" import="false">
                    <field name="masv"/>
                    <field name="name"/>
                    <field name="gioitinh"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="students_form_view" model="ir.ui.view">
            <field name="name">Sinh Viên</field>
            <field name="model">students</field>
            <field name="arch" type="xml">
                <form string="Students">
                    <header>
                        <button name="check_hoc" type="object" string="Đã Học Xong" class="oe_highlight"
                         attrs="{'invisible':[('state','=','mh')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="mh,hd,dhx" nolabel="1" readonly="1"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="masv"/>
                            <h1>
                                <field name="masv" placeholder="Mã Sinh Viên"/>
                            </h1>
                        </div>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Tên Sinh Viên"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="gioitinh" widget="radio"/>
                                <field name="bod"/>
                                <field name="address"/>
                                <field name="mail"/>
                                <field name="phone"/>
                            </group>
                            <group>
                                <field name="khoa_id" required="1" domain="[('state','=', 'dh')]"
                                       options="{'no_create': True, 'no_create_edit': True}"/>
                                <field name="chuyen_nganh_id" required="1"
                                       attrs="{'invisible':[('khoa_id','=',False)]}"
                                       options="{'no_create': True, 'no_create_edit': True}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Các lớp học">
                                <field name="class_class_ids" readonly="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="gv"/>
                                        <field name="mon_hoc_id"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Điểm tổng kết">
                                <field name="point_ids">
                                    <tree>
                                        <field name="subject_id"/>
                                        <field name="point"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="students_form_view_button" model="ir.ui.view">
            <field name="name">Sinh Viên</field>
            <field name="model">students</field>
            <field name="priority" eval="150"/>
            <field name="arch" type="xml">
                <form string="Students" create="false" edit="false">
                    <header>
                        <button name="check_hoc" type="object" string="Đã Học Xong" class="oe_highlight"
                         attrs="{'invisible':True}"/>
                        <field name="state" widget="statusbar" statusbar_visible="mh,hd,dhx" nolabel="1" readonly="1"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="masv"/>
                            <h1>
                                <field name="masv" placeholder="Mã Sinh Viên"/>
                            </h1>
                        </div>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Tên Sinh Viên"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="gioitinh" widget="radio"/>
                                <field name="bod"/>
                                <field name="address"/>
                                <field name="mail"/>
                                <field name="phone"/>
                            </group>
                            <group>
                                <field name="khoa_id" required="1" domain="[('state','=', 'dh')]"
                                       options="{'no_create': True, 'no_create_edit': True}"/>
                                <field name="chuyen_nganh_id" required="1"
                                       attrs="{'invisible':[('khoa_id','=',False)]}"
                                       options="{'no_create': True, 'no_create_edit': True}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Các lớp học">
                                <field name="class_class_ids" readonly="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="gv"/>
                                        <field name="mon_hoc_id"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Điểm tổng kết">
                                <field name="point_ids">
                                    <tree>
                                        <field name="subject_id"/>
                                        <field name="point"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="students_view_search" model="ir.ui.view">
            <field name="name">Students Search</field>
            <field name="model">students</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="masv"/>
                    <field name="name" filter_domain="['|',('masv', 'ilike', self),('name', 'ilike', self)]"/>
                    <field name="mail"/>
                    <field name="khoa_id"/>

                    <separator/>
                    <filter string="Nam" name="female" domain="[('gioitinh', '=', 'female')]"/>
                    <filter string="Nữ" name="male" domain="[('gioitinh', '=', 'male')]"/>
                    <filter string="Học đi" name="hd" domain="[('state', '=', 'hd')]"/>
                    <filter string="Mới nhập học" name="mh" domain="[('state', '=', 'mh')]"/>

                    <group expand="0" string="Group By">
                        <filter string="Khóa" name="khoa_id" context="{'group_by':'khoa_id'}"/>
                        <filter string="Chuyên Ngành" name="chuyen_nganh_id" context="{'group_by':'chuyen_nganh_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="students_view_action" model="ir.actions.act_window">
            <field name="name">Sinh Viên</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">students</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="students_khoa_hoc" model="ir.actions.act_window">
            <field name="name">Sinh Viên</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">students</field>
            <field name="context">{'group_by': ['chuyen_nganh_id']}</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('students_tree_view_button')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('students_form_view_button')})]"/>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('khoa_id', '=' , active_id)]</field>
        </record>


    </data>
</odoo>